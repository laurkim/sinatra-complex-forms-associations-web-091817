<h1>Update a Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <!-- <input hidden="true" name="_method" value="patch"> -->

  <label>Pet Name:</label>
  <br></br>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
  <br></br>

  <label>Choose an Existing Owner:</label>
  <br></br>
  <% Owner.all.each do |owner| %>
  <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if owner.pets.include?(@pet)%> >
  <%= owner.name %>
  <% end %>
  <br></br>

  <label>Or...Create a New Owner:</label>
  <br></br>
  <label>Owner Name:</label>
  <br></br>
  <input type="text" name="owner[name]" id="owner_name">
  <br></br>

  <input type="submit" value="Update Pet">
</form>
